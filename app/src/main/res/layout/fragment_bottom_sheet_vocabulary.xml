<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/line_of_top"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_bottom_sheet_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="12dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/en_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_flag_uk" />

        <ImageView
            android:id="@+id/en_icon2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vertical"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/en_word_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dfdgfg df dfdgfg sdf sdf"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/uz_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_flag" />

        <ImageView
            android:id="@+id/uz_icon2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vertical"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/uz_word_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dfdgfg sdf sdf dfdgfg sdf sdf dfdgfg sdf sdf dfdgfg sdf sdf"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"

        >

        <ImageView
            android:id="@+id/definition"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_definition" />

        <ImageView
            android:id="@+id/definition2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vertical"
            android:scaleType="fitXY"

            />

        <TextView
            android:id="@+id/defination_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dfdgfg sdf sdf dfdgfg sdf sdf dfdgfg sdf sdf dfdgfg sdf sdf"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>